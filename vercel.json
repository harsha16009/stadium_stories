{
    "buildCommand": "cd frontend && npm install && npm run build && cd .. && node collect-static.js",
    "outputDirectory": "public",
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}