{
    "version": 2,
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/vite"
        },
        {
            "src": "backend/server.js",
            "use": "@vercel/node"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/backend/server.js"
        },
        {
            "source": "/(.*)",
            "destination": "/frontend/dist/index.html"
        }
    ],
    "env": {
        "NODE_VERSION": "18.x"
    }
}